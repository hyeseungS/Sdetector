<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings3Fragment">

    <LinearLayout
        android:id="@+id/text_settings3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33E3C7CB"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="이용 약관 확인"
            android:textColor="#504435"
            android:textSize="32dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:background="@drawable/round_layout2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서비스 이용 약관"
                    android:textColor="#676658"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View

                    android:layout_width="0dp"

                    android:layout_height="0dp"

                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/tacBtn1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_button"
                    android:padding="0dp"
                    android:text="확인"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF" />

                <ToggleButton
                    android:id="@+id/tacToggle1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/round_button"
                    android:textOff="비동의"
                    android:textOn="동의"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_layout2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보 수집 및 이용"
                    android:textColor="#676658"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View

                    android:layout_width="0dp"

                    android:layout_height="0dp"

                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/tacBtn2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_button"
                    android:padding="0dp"
                    android:text="확인"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF" />

                <ToggleButton
                    android:id="@+id/tacToggle2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/round_button"
                    android:textOff="비동의"
                    android:textOn="동의"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_layout2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자 접근 권한"
                    android:textColor="#676658"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View

                    android:layout_width="0dp"

                    android:layout_height="0dp"

                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/tacBtn3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_button"
                    android:padding="0dp"
                    android:text="확인"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF" />

                <ToggleButton
                    android:id="@+id/tacToggle3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/round_button"
                    android:textOff="비동의"
                    android:textOn="동의"
                    android:textColor="#2B261E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>