<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings2_1Fragment">

    <LinearLayout
        android:id="@+id/text_settings2_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33E3C7CB"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/changeIDBox"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:text="ID 변경"
                android:textColor="#504435"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="현재 ID를 입력한 후,
             \n새로운 ID를 입력하세요." />

            <EditText
                android:id="@+id/changeIDEdit1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/login2_textview"
                android:gravity="center_vertical"
                android:hint="현재 ID 입력"
                android:paddingLeft="20dp"
                android:textColor="#2B261E"
                android:textColorHint="#662B261E"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/changeIDEdit2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login2_textview"
                android:gravity="center_vertical"
                android:hint="새로운 ID 입력"
                android:paddingLeft="20dp"
                android:textColor="#2B261E"
                android:textColorHint="#662B261E"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/changeIDEdit3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login2_textview"
                android:gravity="center_vertical"
                android:hint="새로운 ID 입력 확인"
                android:paddingLeft="20dp"
                android:textColor="#2B261E"
                android:textColorHint="#662B261E"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <Button
            android:id="@+id/changeIDBtn"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="ID 변경"
            android:textSize="24dp"
            android:fontFamily="@font/custom_font_style"
            app:cornerRadius="36dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>